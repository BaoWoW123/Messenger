extends layout

block content
  .login
    h1 Log In
    form(action="" method="post") 
        label(for="username")
        input(type="text" name="username" placeholder='Username')
        label(for="email")
        input(type="email" name="email" placeholder='Email')
        label(for="password")
        input(type="password" name="password" placeholder='Password')
        button(type="submit") Log in
    if errors 
     ul.errors
        each err in errors
         li=err